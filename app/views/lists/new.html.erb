<div class="container mt-3">
  <div class="row justify-content-center">
    <div class="col-12 col-sm-8 col-lg-6">
      <h1>Add a list</h1>
      <%= simple_form_for @list do |f| %>
        <%= f.input :name %>
        <%= f.submit 'Add', class: 'btn btn-dark mt-2 w-100' %>
        <%= f.input :photo, as: :file %>
      <% end %>
    </div>
  </div>
</div>
